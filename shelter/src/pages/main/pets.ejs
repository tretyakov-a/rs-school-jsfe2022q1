  <div class="section__content">
    <div class="main-pets__slider main-pets-slider">
      <div class="main-pets-slider__prev">
        <button class="button button_circle">&#8592;</button>
      </div>
      <ul class="main-pets-slider__list">
        <li class="main-pets-slider__list-item pets-slider-card">
          <div class="pets-slider-card__img-container">
            <img src="<%= require('../../assets/pictures/pets/katrine.png') %>" alt="charly">
          </div>
