{
  "include": ["src/**/*.ts"],
  "files": [
    "src/global.d.ts"
  ],
  "compilerOptions": {
    "module": "es6",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "paths": {
      "@common/*": ["common/*"],
      "@views/*": ["views/*"],
      "@components/*": ["components/*"],
      "@core/*": ["core/*"],
      "@assets/*": ["../assets/*"],
    } 
  }
}
